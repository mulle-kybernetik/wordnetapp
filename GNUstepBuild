# GNUstepBuild
# $Id: GNUstepBuild,v 1.1 2003-11-03 15:17:29 znek Exp $


ADDITIONAL_CFLAGS += -DUNIX -Dunix
ADDITIONAL_OBJCFLAGS += -DUNIX -Dunix


ifeq "$(OBJC_RUNTIME_LIB)" "gnu"
  ADDITIONAL_OBJCFLAGS += -DGNU_RUNTIME
endif


ifneq ($(findstring darwin, $(GNUSTEP_HOST_OS)),)

  # Mac OS X 10.2
  ifneq ($(findstring darwin6, $(GNUSTEP_HOST_OS)),)
    ADDITIONAL_OBJCFLAGS += -DMAC_OS_X_VERSION_10_2
  endif

  # Mac OS X 10.3
  ifneq ($(findstring darwin7, $(GNUSTEP_HOST_OS)),)
    ADDITIONAL_OBJCFLAGS += -DMAC_OS_X_VERSION_10_3
  endif
else # not on OSX
  ADDITIONAL_OBJCFLAGS += -DWORDNET_OSXSBUILD
endif
